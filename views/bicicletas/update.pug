
extends ../layout

block content
    .m-5
    a.mt-5(href="/bicicletas") Volver
    br
    br
    
    form(action="/bicicletas/"+bici.id+"/update" method='post')
        h1.text-center Actualizar Bicicleta

        .form-group
            label(for='id') ID:
            input#id.form-control(type='text' name='id'  placeholder='ID' value=bici.id)
        .form-group
            label(for='color') Color:
            input#color.form-control(type='text' name="color" placeholder='Color' value=bici.color)
        .form-group
            label(for='modelo') Modelo:
            input#modelo.form-control(type='text' name="modelo" placeholder='Modelo' value=bici.modelo)
        .form-group
            label(for='lat') Latitud:
            input#lat.form-control(type='text' name="lat" placeholder='Latitud' value=bici.ubicacion[0])
        .form-group
            label(for='lng') Latitud:
            input#lng.form-control(type='text' name="lng" placeholder='Longitud' value=bici.ubicacion[1])
        
        input.mt-3.btn.btn-primary(type='submit' value="OK") 